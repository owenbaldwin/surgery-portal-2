<div class='navbar-container'>

  <div class='navbar-inner'>
    <% if current_user %>
      <div class='navbar-left'>
        <% if current_user.rank == "doctor" %>
          <h6>Doctor </h6>
        <% elsif current_user.rank == "patient" %>
          <h6>Patient </h6>
        <% else %>
          <h6>NIL </h6>
        <% end %>
        <h6><%= current_user.full_name %></h6>
      </div>
      <div class='navbar-right'>
        <%= link_to "Edit Account", edit_user_registration_path %>
        <%= button_to "Logout", destroy_user_session_path, data: {turbo: "false"}, method: :delete, class:"log-out-btn" %>
        <%= image_tag(current_user.avatar_url) %>
      </div>
    <% else %>
      <%= link_to "Login", new_user_session_path %>
      <%= link_to "Create Account", new_user_registration_path %>

      <h2>Display public announcements</h2>
    <% end %>
  </div>

</div>
