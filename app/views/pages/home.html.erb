<div>


  <% if current_user %>
    <h1>Welcome back <%= current_user.full_name %></h1>
    <%# This needs to go in a nav bar %>
    <%= image_tag(current_user.avatar_url) %>
    <%= link_to "Edit Account", edit_user_registration_path %>
    <%= button_to "Logout", destroy_user_session_path, data: {turbo: "false"}, method: :delete %>
    <h2>Choose an option</h2>
    <h4>Book an appointment</h4>
    <h4>check booked appointments</h4>
    <h4>Message your GP</h4>

    <div>
      <h2>Surgery announcements:</h2>
    </div>


  <% else %>
